{
  "name": "@invboyz/flu",
  "version": "1.0.4",
  "description": "Flu: dependency-free, chainable terminal styling with plugins.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
  "build:esm": "tsc -p tsconfig.json",
  "build:cjs": "tsc -p tsconfig.cjs.json",
  "build": "npm run build:esm && npm run build:cjs && npm run postbuild",
  "postbuild": "node scripts/postbuild.cjs",
  "dev": "tsc -w -p tsconfig.json",
  "prepare": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Federico J. Leiva",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FedericoLeiva12/flu.git"
  },
  "keywords": [
    "ansi",
    "colors",
    "terminal",
    "chalk",
    "styling",
    "cli",
    "flu"
  ],
  "devDependencies": {
    "typescript": "^5.5.0"
  }
}
